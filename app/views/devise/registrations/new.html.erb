<h1>Sign up</h1>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.input :username %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <div class="form-actions">
    <%= f.submit "Sign up", :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "links" %>
